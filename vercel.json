{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "cd scoracle-svelte && npm run build",
  "installCommand": "cd scoracle-svelte && npm install",
  "outputDirectory": "scoracle-svelte/build",
  "framework": null,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.py" },
    { "source": "/health", "destination": "/api/index.py" },
    { "source": "/((?!api|_app|favicon|data|manifest).*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/index.py": {
      "includeFiles": "backend/instance/**"
    }
  },
  "env": {
    "PYTHONPATH": "backend"
  }
}
