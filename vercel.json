{
	"buildCommand": "npm ci --prefix frontend && npm run --prefix frontend build",
	"outputDirectory": "frontend/build",
	"functions": {
		"api/**/*.py": {
			"runtime": "python3.11",
			"includeFiles": "{backend/**,instance/localdb/**}",
			"excludeFiles": "backend/venv/**"
		}
	},
	"rewrites": [
		{ "source": "/api/:match*", "destination": "/api/index.py" },
		{ "source": "/:path*", "destination": "/index.html" }
	]
}
