{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": "sveltekit",
  "buildCommand": "cd scoracle-svelte && npm run build",
  "installCommand": "cd scoracle-svelte && npm install",
  "outputDirectory": "scoracle-svelte/.svelte-kit/output",
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/index.py" },
    { "source": "/health", "destination": "/api/index.py" }
  ],
  "functions": {
    "api/index.py": {
      "runtime": "python3.12",
      "includeFiles": "backend/**"
    }
  }
}
