{
	"builds": [
		{
			"src": "frontend/package.json",
			"use": "@vercel/static-build",
			"config": { "distDir": "build" }
		}
	],
	"functions": {
		"api/**/*.py": {
			"runtime": "python3.11",
			"includeFiles": "{backend/**,instance/localdb/**}",
			"excludeFiles": "backend/venv/**"
		}
	},
	"routes": [
		{ "src": "^/api(/.*)?$", "dest": "/api/index.py" },
		{ "src": "^(?!/api)(.*)$", "dest": "/index.html" }
	]
}
