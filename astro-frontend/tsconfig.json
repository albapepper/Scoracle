{
  // Removed "extends": "astro/tsconfigs/strict" to avoid editor errors
  // when the package config isn't resolvable. Explicit compiler options
  // are provided below instead.
  "compilerOptions": {
    "module": "es2020",
    "target": "es2020",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@pages/*": ["src/pages/*"]
    }
  },
  "include": ["src/**/*", ".astro/types.d.ts"],
  "exclude": ["node_modules", "dist"]
}
