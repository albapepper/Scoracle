---
/**
 * Stats Card
 * 
 * Displays entity statistics in a clean table format.
 * Matches the aesthetic of EntityWidget and ContentCard.
 * 
 * Props:
 * - title: Card title (defaults to "Statistics")
 */

interface Props {
  title?: string;
}

const { title = "Statistics" } = Astro.props;
const apiUrl = import.meta.env.PUBLIC_API_URL || 'http://localhost:8000/api/v1';
---

<div class="stats-card card" data-api-url={apiUrl}>
  <!-- Header -->
  <div class="stats-card-header">
    <h3 class="stats-card-title">{title}</h3>
    <span id="stats-season" class="stats-card-season"></span>
  </div>

  <!-- Content -->
  <div class="stats-card-body">
    <!-- Loading State -->
    <div id="stats-loading" class="stats-loading">
      <div class="skeleton-row">
        <div class="skeleton-cell label"></div>
        <div class="skeleton-cell value"></div>
      </div>
      <div class="skeleton-row">
        <div class="skeleton-cell label"></div>
        <div class="skeleton-cell value"></div>
      </div>
      <div class="skeleton-row">
        <div class="skeleton-cell label"></div>
        <div class="skeleton-cell value"></div>
      </div>
      <div class="skeleton-row">
        <div class="skeleton-cell label"></div>
        <div class="skeleton-cell value"></div>
      </div>
      <div class="skeleton-row">
        <div class="skeleton-cell label"></div>
        <div class="skeleton-cell value"></div>
      </div>
    </div>

    <!-- Data Table -->
    <table id="stats-table" class="stats-table hidden">
      <tbody id="stats-tbody">
        <!-- Rows populated by JavaScript -->
      </tbody>
    </table>

    <!-- Empty State -->
    <div id="stats-empty" class="stats-empty hidden">
      <p>No statistics available</p>
    </div>

    <!-- Error State -->
    <div id="stats-error" class="stats-error hidden">
      <p>Unable to load statistics</p>
    </div>
  </div>
</div>

<style>
  .stats-card {
    width: 100%;
    max-width: 600px;
    display: flex;
    flex-direction: column;
    border-radius: 0.375rem;
    overflow: hidden;
  }

  .stats-card-header {
    padding: 1.25rem 1.5rem 1rem;
    border-bottom: 1px solid var(--border);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  :global(.dark) .stats-card-header {
    border-bottom-color: var(--border-dark);
  }

  .stats-card-title {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--text);
    line-height: 1.4;
  }

  :global(.dark) .stats-card-title {
    color: var(--text-dark);
  }

  .stats-card-season {
    font-size: 0.8rem;
    color: var(--text-secondary);
    font-weight: 500;
  }

  :global(.dark) .stats-card-season {
    color: var(--text-secondary-dark);
  }

  .stats-card-body {
    padding: 1rem 1.5rem 1.25rem;
  }

  /* Loading Skeleton */
  .stats-loading {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .skeleton-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
  }

  .skeleton-cell {
    height: 14px;
    border-radius: 3px;
    background-color: var(--border);
    animation: pulse 1.5s ease-in-out infinite;
  }

  .skeleton-cell.label {
    width: 40%;
  }

  .skeleton-cell.value {
    width: 20%;
  }

  :global(.dark) .skeleton-cell {
    background-color: var(--border-dark);
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  /* Stats Table */
  .stats-table {
    width: 100%;
    border-collapse: collapse;
  }

  .stats-table tr {
    border-bottom: 1px solid var(--border);
  }

  .stats-table tr:last-child {
    border-bottom: none;
  }

  :global(.dark) .stats-table tr {
    border-bottom-color: var(--border-dark);
  }

  .stats-table td {
    padding: 0.625rem 0;
    font-size: 0.9rem;
    line-height: 1.4;
  }

  .stats-table td:first-child {
    color: var(--text-secondary);
    font-weight: 400;
  }

  .stats-table td:last-child {
    text-align: right;
    color: var(--text);
    font-weight: 500;
    font-variant-numeric: tabular-nums;
  }

  :global(.dark) .stats-table td:first-child {
    color: var(--text-secondary-dark);
  }

  :global(.dark) .stats-table td:last-child {
    color: var(--text-dark);
  }

  /* Empty & Error States */
  .stats-empty,
  .stats-error {
    padding: 1.5rem 0;
    text-align: center;
  }

  .stats-empty p,
  .stats-error p {
    margin: 0;
    font-size: 0.9rem;
    color: var(--text-tertiary);
  }

  :global(.dark) .stats-empty p,
  :global(.dark) .stats-error p {
    color: var(--text-tertiary-dark);
  }

  /* Utility */
  .hidden {
    display: none !important;
  }

  /* Responsive - Mobile */
  @media (max-width: 480px) {
    .stats-card-header {
      padding: 1rem;
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }

    .stats-card-title {
      font-size: 0.9rem;
    }

    .stats-card-season {
      font-size: 0.75rem;
    }

    .stats-card-body {
      padding: 0.75rem 1rem 1rem;
    }

    .stats-table td {
      padding: 0.5rem 0;
      font-size: 0.85rem;
    }
  }

  /* Extra small screens */
  @media (max-width: 320px) {
    .stats-card-header {
      padding: 0.75rem;
    }

    .stats-card-body {
      padding: 0.5rem 0.75rem 0.75rem;
    }

    .stats-table td {
      font-size: 0.8rem;
    }
  }
</style>

<script>
  import { escapeHtml } from '../lib/utils/dom';

  /**
   * StatsCard Manager
   *
   * Handles loading statistics from the backend API
   * and populating the table with data.
   */
  class StatsCardManager {
    private card!: HTMLElement;
    private apiUrl!: string;

    constructor(card: HTMLElement) {
      this.card = card;
      this.apiUrl = card.dataset.apiUrl || '';
      this.init();
    }

    private async init() {
      // Get entity info from URL
      const params = new URLSearchParams(window.location.search);
      const sport = params.get('sport');
      const type = params.get('type');
      const id = params.get('id');

      if (!sport || !type || !id) {
        this.showError();
        return;
      }

      try {
        await this.loadStats(sport, type, id);
      } catch (error) {
        if (import.meta.env.DEV) {
          console.error('Failed to load stats:', error);
        }
        this.showError();
      }
    }

    private async loadStats(sport: string, type: string, id: string) {
      // No category parameter - API returns all stats for the entity
      const url = `${this.apiUrl}/stats/${type}/${id}?sport=${sport}`;
      
      const response = await fetch(url);
      
      if (!response.ok) {
        if (response.status === 404) {
          this.showEmpty();
          return;
        }
        throw new Error(`HTTP ${response.status}`);
      }

      const data = await response.json();
      
      if (!data || !data.stats || data.stats.length === 0) {
        this.showEmpty();
        return;
      }

      // Display season if available
      if (data.season) {
        const seasonEl = this.card.querySelector('#stats-season');
        if (seasonEl) {
          seasonEl.textContent = `${data.season} Season`;
        }
      }

      this.renderTable(data.stats);
    }

    private renderTable(stats: Array<{ label: string; value: string | number }>) {
      const tbody = this.card.querySelector('#stats-tbody');
      if (!tbody) return;

      tbody.innerHTML = stats
        .map(({ label, value }) => `
          <tr>
            <td>${escapeHtml(label)}</td>
            <td>${escapeHtml(String(value))}</td>
          </tr>
        `)
        .join('');

      this.showContent();
    }

    private showContent() {
      this.card.querySelector('#stats-loading')?.classList.add('hidden');
      this.card.querySelector('#stats-table')?.classList.remove('hidden');
      this.card.querySelector('#stats-empty')?.classList.add('hidden');
      this.card.querySelector('#stats-error')?.classList.add('hidden');
    }

    private showEmpty() {
      this.card.querySelector('#stats-loading')?.classList.add('hidden');
      this.card.querySelector('#stats-table')?.classList.add('hidden');
      this.card.querySelector('#stats-empty')?.classList.remove('hidden');
      this.card.querySelector('#stats-error')?.classList.add('hidden');
    }

    private showError() {
      this.card.querySelector('#stats-loading')?.classList.add('hidden');
      this.card.querySelector('#stats-table')?.classList.add('hidden');
      this.card.querySelector('#stats-empty')?.classList.add('hidden');
      this.card.querySelector('#stats-error')?.classList.remove('hidden');
    }
  }

  // Initialize stats card on page load
  const statsCard = document.querySelector<HTMLElement>('.stats-card');
  if (statsCard) {
    new StatsCardManager(statsCard);
  }
</script>
