---
// Header with hamburger menu (left) | Search bar (center) | Home button (right)
import HamburgerMenu from './HamburgerMenu.astro';

interface Props {
  sport?: string;
  showSearch?: boolean;
}

const { sport = 'nba', showSearch = true } = Astro.props;
---

<header class="header-wrapper">
  <div class="header-content">
    <!-- Left: Hamburger Menu -->
    <div class="header-left">
      <HamburgerMenu />
    </div>

    <!-- Center: Search Bar -->
    {showSearch && (
      <div class="header-center">
        <div class="header-search-container" data-sport={sport}>
          <form id="header-search-form" class="header-search-form">
            <input
              id="header-search-input"
              type="text"
              placeholder="Search players or teams..."
              class="header-search-input"
              autocomplete="off"
            />
          </form>
          <div id="header-suggestions" class="header-suggestions-dropdown hidden"></div>
        </div>
      </div>
    )}

    <!-- Right: Home Button -->
    <div class="header-right">
      <a href="/home" class="home-btn" aria-label="Go to home">
        <svg class="icon-home" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
        </svg>
      </a>
    </div>
  </div>
</header>

<style scoped>
  .hidden {
    display: none;
  }

  .header-wrapper {
    position: sticky;
    top: 0;
    z-index: 50;
    background-color: var(--bg);
    border-bottom: 1px solid var(--border);
  }

  :global(.dark) .header-wrapper {
    background-color: var(--bg-dark);
    border-bottom-color: var(--border-dark);
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 3.5rem;
    padding: 0 0.75rem;
    gap: 1rem;
    position: relative;
  }

  .header-left {
    position: absolute;
    left: 0.75rem;
  }

  .header-center {
    display: flex;
    justify-content: center;
    width: 100%;
    max-width: 320px;
  }

  .header-right {
    position: absolute;
    right: 0.75rem;
  }

  /* Home Button - minimum 44x44px touch target */
  .home-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 44px;
    min-height: 44px;
    padding: 0.625rem;
    color: var(--text-secondary);
    text-decoration: none;
  }

  :global(.dark) .home-btn {
    color: var(--text-secondary-dark);
  }

  .icon-home {
    width: 1.5rem;
    height: 1.5rem;
  }

  /* Header Search */
  .header-search-container {
    position: relative;
    width: 100%;
  }

  .header-search-form {
    width: 100%;
  }

  .header-search-input {
    width: 100%;
    background-color: var(--bg-card);
    border-radius: 0.25rem;
    padding: 0.75rem 1rem;
    min-height: 44px;
    border: 1px solid var(--border);
    color: var(--text);
    font-size: 1rem;
    text-align: center;
  }

  .header-search-input:focus {
    outline: none;
    border-color: var(--text-secondary);
    text-align: left;
  }

  :global(.dark) .header-search-input {
    background-color: var(--bg-card-dark);
    border-color: var(--border-dark);
    color: var(--text-dark);
  }

  :global(.dark) .header-search-input:focus {
    border-color: var(--text-secondary-dark);
  }

  .header-search-input::placeholder {
    color: var(--text-tertiary);
    text-align: center;
  }

  :global(.dark) .header-search-input::placeholder {
    color: var(--text-tertiary-dark);
  }

  /* Suggestions Dropdown */
  .header-suggestions-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    margin-top: 0.25rem;
    background-color: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 0.25rem;
    max-height: 320px;
    overflow-y: auto;
    z-index: 60;
  }

  :global(.dark) .header-suggestions-dropdown {
    background-color: var(--bg-card-dark);
    border-color: var(--border-dark);
  }

  .header-suggestions-dropdown.hidden {
    display: none;
  }

  /* Suggestion Items - minimum 44px height for touch */
  :global(.header-suggestion-item) {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
    padding: 0.75rem 1rem;
    min-height: 44px;
    cursor: pointer;
    background: transparent;
    border: none;
    border-bottom: 1px solid var(--border);
    text-align: left;
  }

  :global(.header-suggestion-item:last-child) {
    border-bottom: none;
  }

  :global(.header-suggestion-item:hover),
  :global(.header-suggestion-item.selected) {
    background-color: var(--bg);
  }

  :global(.dark .header-suggestion-item) {
    border-bottom-color: var(--border-dark);
  }

  :global(.dark .header-suggestion-item:hover),
  :global(.dark .header-suggestion-item.selected) {
    background-color: var(--bg-dark);
  }

  :global(.header-suggestion-name) {
    font-weight: 500;
    color: var(--text);
    font-size: 0.875rem;
  }

  :global(.dark .header-suggestion-name) {
    color: var(--text-dark);
  }

  :global(.header-suggestion-type) {
    font-size: 0.75rem;
    color: var(--text-secondary);
  }

  :global(.dark .header-suggestion-type) {
    color: var(--text-secondary-dark);
  }

  :global(.header-no-results) {
    padding: 0.75rem;
    text-align: center;
    color: var(--text-secondary);
    font-size: 0.875rem;
  }

  :global(.dark .header-no-results) {
    color: var(--text-secondary-dark);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .header-content {
      padding: 0 0.5rem;
    }

    .header-center {
      max-width: none;
      padding: 0 2.5rem;
    }

    .header-search-input {
      font-size: 0.9rem;
    }

    .header-search-input::placeholder {
      font-size: 0.85rem;
    }
  }

  /* Extra small screens */
  @media (max-width: 320px) {
    .header-center {
      padding: 0 2rem;
    }

    .header-search-input {
      padding: 0.625rem 0.75rem;
      font-size: 0.85rem;
    }
  }
</style>

<script>
  import { AutocompleteManager, type AutocompleteEntity } from '../lib/utils/autocomplete';
  import { escapeHtml } from '../lib/utils/dom';

  // Initialize header search
  const input = document.getElementById('header-search-input') as HTMLInputElement;
  const suggestions = document.getElementById('header-suggestions') as HTMLElement;
  const container = document.querySelector('.header-search-container') as HTMLElement;

  if (input && suggestions) {
    const stored = localStorage.getItem('activeSport');
    const initialSport = stored || container?.dataset.sport || 'nba';

    const autocomplete = new AutocompleteManager({
      inputEl: input,
      suggestionsEl: suggestions,
      initialSport,
      itemClass: 'header-suggestion-item',
      onSelect: (entity) => {
        const sportParam = autocomplete.getSport().toUpperCase();
        window.location.href = `/news?sport=${sportParam}&type=${entity.type}&id=${entity.id}`;
      },
      renderItem: (entity, index) => `
        <button
          type="button"
          data-index="${index}"
          class="header-suggestion-item"
          tabindex="-1"
        >
          <div class="header-suggestion-name">${escapeHtml(entity.name)}</div>
          <div class="header-suggestion-type">${entity.type === 'player' ? (entity.team || 'Player') : 'Team'}</div>
        </button>
      `,
    });

    // Listen for sport changes
    window.addEventListener('sportchange', ((e: CustomEvent) => {
      autocomplete.setSport(e.detail.sport);
    }) as EventListener);

    // Handle form submit
    document.getElementById('header-search-form')?.addEventListener('submit', (e) => {
      e.preventDefault();
    });
  }
</script>
