---
import ThemeToggle from './ThemeToggle';
---

<header class="sticky top-0 z-50 bg-white/95 dark:bg-slate-900/95 backdrop-blur-sm border-b border-slate-200 dark:border-slate-800">
  <div class="container-custom">
    <div class="flex items-center justify-between py-4">
      <div class="flex items-center gap-4">
        <a href="/" class="text-2xl font-bold text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors" rel="home">
          Scoracle
        </a>
        <span class="text-sm text-slate-500 dark:text-slate-400">
          Sports News & Statistics
        </span>
      </div>
      
      <div class="flex items-center gap-4">
        <!-- Prefetch common pages for faster navigation -->
        <link rel="prefetch" href="/" />
        <ThemeToggle client:idle />
      </div>
    </div>
  </div>
</header>
