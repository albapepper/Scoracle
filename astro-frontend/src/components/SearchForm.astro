---
// Pure Astro search form - zero React
import { getSportDisplay } from '../lib/types';

interface Props {
  sport?: string;
}

const { sport = 'nba' } = Astro.props;
const sportDisplay = getSportDisplay(sport);
---

<div class="search-container" data-sport={sport}>
  <form id="search-form" class="search-form">
    <div class="search-input-wrapper">
      <input
        id="search-input"
        type="text"
        placeholder={`Search for ${sportDisplay} players or teams...`}
        class="input search-input"
        autocomplete="off"
      />
      <button
        type="submit"
        class="search-button"
        aria-label="Search"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </button>
    </div>
  </form>

  <div id="suggestions" class="suggestions-dropdown hidden"></div>
</div>

<style scoped>
  .search-container {
    position: relative;
    width: 100%;
    max-width: 375px;
    margin: 0 auto;
    display: block;
  }

  .search-form {
    position: relative;
    width: 100%;
  }

  .search-input-wrapper {
    display: flex;
    align-items: center;
    background-color: var(--bg-card);
    border-radius: 0.25rem;
    padding: 0.75rem 1rem;
    border: 1px solid var(--border);
    width: 100%;
  }

  :global(.dark) .search-input-wrapper {
    background-color: var(--bg-card-dark);
    border-color: var(--border-dark);
  }

  .search-input {
    flex: 1;
    background: transparent;
    border: none;
    outline: none;
    color: var(--text);
    font-size: 0.95rem;
    padding: 0;
  }

  :global(.dark) .search-input {
    color: var(--text-dark);
  }

  .search-input::placeholder {
    color: var(--text-tertiary);
  }

  :global(.dark) .search-input::placeholder {
    color: var(--text-tertiary-dark);
  }

  .search-button {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    margin-left: 0.5rem;
    background: transparent;
    border: none;
    cursor: pointer;
    color: var(--text-tertiary);
    flex-shrink: 0;
  }

  :global(.dark) .search-button {
    color: var(--text-tertiary-dark);
  }

  .suggestions-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    margin-top: 0.5rem;
    background-color: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 0.25rem;
    max-height: 384px;
    overflow-y: auto;
    z-index: 10;
  }

  :global(.dark) .suggestions-dropdown {
    background-color: var(--bg-card-dark);
    border-color: var(--border-dark);
  }

  .suggestions-dropdown.hidden {
    display: none;
  }

  :global(.suggestion-item) {
    width: 100%;
    text-align: left;
    padding: 0.75rem 1rem;
    background: transparent;
    border: none;
    border-bottom: 1px solid var(--border);
    color: var(--text);
    cursor: pointer;
    font-size: 0.9375rem;
  }

  :global(.dark) .suggestion-item {
    border-bottom-color: var(--border-dark);
    color: var(--text-dark);
  }

  :global(.suggestion-item:last-child) {
    border-bottom: none;
  }

  :global(.suggestion-item div:first-child) {
    font-weight: 500;
    color: var(--text);
    margin-bottom: 0.25rem;
  }

  :global(.dark) .suggestion-item div:first-child {
    color: var(--text-dark);
  }

  :global(.suggestion-item div:last-child) {
    font-size: 0.8125rem;
    color: var(--text-secondary);
  }

  :global(.dark) .suggestion-item div:last-child {
    color: var(--text-secondary-dark);
  }

  /* Scrollbar styling */
  :global(.suggestions-dropdown::-webkit-scrollbar) {
    width: 6px;
  }

  :global(.suggestions-dropdown::-webkit-scrollbar-track) {
    background: transparent;
  }

  :global(.suggestions-dropdown::-webkit-scrollbar-thumb) {
    background: var(--border);
    border-radius: 3px;
  }

  :global(.dark) .suggestions-dropdown::-webkit-scrollbar-thumb {
    background: var(--border-dark);
  }
</style>

<script>
  import { AutocompleteManager } from '../lib/utils/autocomplete';
  import { escapeHtml } from '../lib/utils/dom';

  // Initialize all search forms on page
  document.querySelectorAll('.search-container').forEach(container => {
    const input = container.querySelector('#search-input') as HTMLInputElement;
    const suggestions = container.querySelector('#suggestions') as HTMLElement;
    const initialSport = (container as HTMLElement).dataset.sport || 'nba';

    if (!input || !suggestions) return;

    const autocomplete = new AutocompleteManager({
      inputEl: input,
      suggestionsEl: suggestions,
      initialSport,
      itemClass: 'suggestion-item',
      onSelect: (entity) => {
        const sportParam = autocomplete.getSport().toUpperCase();
        window.location.href = `/news?sport=${sportParam}&type=${entity.type}&id=${entity.id}`;
      },
      renderItem: (entity, index) => `
        <button
          type="button"
          data-index="${index}"
          class="suggestion-item"
        >
          <div>${escapeHtml(entity.name)}</div>
          ${entity.team ? `<div>${escapeHtml(entity.team)}</div>` : ''}
        </button>
      `,
    });

    // Listen for sport changes
    window.addEventListener('sportchange', ((e: CustomEvent) => {
      autocomplete.setSport(e.detail.sport);
    }) as EventListener);

    // Handle form submit
    container.querySelector('#search-form')?.addEventListener('submit', (e) => {
      e.preventDefault();
    });
  });
</script>
