---
// Pure Astro search form - zero React
interface Props {
  sport?: string;
}

const { sport = 'nba' } = Astro.props;

// Helper function to get display name for sports
function getSportDisplay(sportId: string): string {
  const sportMap: Record<string, string> = {
    'nba': 'NBA',
    'nfl': 'NFL',
    'football': 'Football'
  };
  return sportMap[sportId.toLowerCase()] || sportId.toUpperCase();
}

const sportDisplay = getSportDisplay(sport);
---

<div class="search-container" data-sport={sport}>
  <form id="search-form" class="search-form">
    <div class="search-input-wrapper">
      <input
        id="search-input"
        type="text"
        placeholder={`Search for ${sportDisplay} players or teams...`}
        class="input search-input"
        autocomplete="off"
      />
      <button
        type="submit"
        class="search-button"
        aria-label="Search"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </button>
    </div>
  </form>

  <div id="suggestions" class="suggestions-dropdown hidden"></div>
</div>

<style scoped>
  .search-container {
    position: relative;
    width: 100%;
    max-width: 375px;
    margin: 0 auto;
    display: block;
  }

  .search-form {
    position: relative;
    width: 100%;
  }

  .search-input-wrapper {
    display: flex;
    align-items: center;
    background-color: #ffffff;
    border-radius: 24px;
    padding: 0.75rem 1rem;
    border: 1px solid #e8e4db;
    transition: all 0.2s ease;
    width: 100%;
  }

  :global(.dark) .search-input-wrapper {
    background-color: #1e1e1e;
    border-color: #444;
  }

  .search-input-wrapper:focus-within {
    border-color: #e8e4db;
    box-shadow: none;
    background-color: #ffffff;
  }

  :global(.dark) .search-input-wrapper:focus-within {
    border-color: #444;
    box-shadow: none;
    background-color: #1e1e1e;
  }

  .search-input {
    flex: 1;
    background: transparent;
    border: none;
    outline: none;
    color: #3d3d3d;
    font-size: 0.95rem;
    padding-right: 0.5rem;
  }

  .search-input:focus {
    outline: none;
    box-shadow: none;
  }

  :global(.dark) .search-input {
    color: #e8e8e8;
  }

  :global(.dark) .search-input:focus {
    outline: none;
    box-shadow: none;
  }

  .search-input::placeholder {
    color: #a0a0a0;
  }

  :global(.dark) .search-input::placeholder {
    color: #666666;
  }

  .search-button {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem;
    background: transparent;
    border: none;
    cursor: pointer;
    color: #a0a0a0;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  :global(.dark) .search-button {
    color: #666666;
  }

  .search-button:hover {
    color: #d4a574;
    transform: scale(1.1);
  }

  :global(.dark) .search-button:hover {
    color: #61afef;
    transform: scale(1.1);
  }


  .search-button:active {
    transform: scale(0.95);
  }

  .suggestions-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    margin-top: 0.5rem;
    background-color: #ffffff;
    border: 1px solid #eee8d5;
    border-radius: 8px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    max-height: 384px;
    overflow-y: auto;
    z-index: 10;
    animation: slideDown 0.15s ease;
  }

  :global(.dark) .suggestions-dropdown {
    background-color: #2c2c2c;
    border: 1px solid #3e3e3e;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-4px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .suggestions-dropdown.hidden {
    display: none;
  }

  :global(.suggestion-item) {
    width: 100%;
    text-align: left;
    padding: 0.75rem 1rem;
    background: transparent;
    border: none;
    border-bottom: 1px solid #eee8d5;
    color: #657b83;
    cursor: pointer;
    transition: all 0.15s ease;
    font-size: 0.9375rem;
  }

  :global(.dark) .suggestion-item {
    border-bottom: 1px solid #3e3e3e;
    color: #e8e8e8;
  }

  :global(.suggestion-item:last-child) {
