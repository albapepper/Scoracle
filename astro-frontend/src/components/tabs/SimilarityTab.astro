---
/**
 * Similarity Tab Component
 *
 * Displays similar entities based on ML embeddings.
 * Fetches: GET /api/v1/similarity/{entity_type}/{entity_id}?sport=X&season=Y&limit=5
 *
 * Features:
 * - Similarity score with visual bar and label
 * - Shared traits and key differences display
 * - Click to navigate to entity stats page
 * - Lazy loading when tab is activated
 * - Prefetch on tab hover for faster perceived load
 */

const apiUrl = import.meta.env.PUBLIC_API_URL || 'http://localhost:8000/api/v1';
---

<div id="similarity-tab-content" data-api-url={apiUrl}>
  <div id="similarity-loading" class="loading-skeleton">
    <div class="skeleton-item"></div>
    <div class="skeleton-item"></div>
    <div class="skeleton-item"></div>
  </div>

  <div id="similarity-content" class="hidden">
    <ul id="similarity-list" class="similarity-list"></ul>
  </div>

  <div id="similarity-empty" class="empty-state hidden">
    No similar entities found
  </div>

  <div id="similarity-error" class="empty-state hidden">
    Unable to load similarity data
  </div>
</div>

<style>
  .loading-skeleton {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .skeleton-item {
    height: 56px;
    border-radius: 6px;
    background-color: var(--border);
    animation: pulse 2s ease-in-out infinite;
  }

  :global(.dark) .skeleton-item {
    background-color: var(--border-dark);
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .similarity-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  #similarity-tab-content :global(.similarity-item) {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border);
    cursor: pointer;
    transition: background-color 0.15s ease;
  }

  #similarity-tab-content :global(.similarity-item:last-child) {
    border-bottom: none;
  }

  #similarity-tab-content :global(.similarity-item:hover) {
    background: var(--hover-bg, rgba(0, 0, 0, 0.03));
    margin: 0 -1rem;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  :global(.dark) #similarity-tab-content :global(.similarity-item) {
    border-bottom-color: var(--border-dark);
  }

  :global(.dark) #similarity-tab-content :global(.similarity-item:hover) {
    background: var(--hover-bg-dark, rgba(255, 255, 255, 0.05));
  }

  #similarity-tab-content :global(.similarity-item-info) {
    flex: 1;
    min-width: 0;
  }

  #similarity-tab-content :global(.similarity-item-name) {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text);
    margin: 0 0 0.125rem 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  :global(.dark) #similarity-tab-content :global(.similarity-item-name) {
    color: var(--text-dark);
  }

  #similarity-tab-content :global(.similarity-item-meta) {
    font-size: 0.75rem;
    color: var(--text-secondary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  :global(.dark) #similarity-tab-content :global(.similarity-item-meta) {
    color: var(--text-secondary-dark);
  }

  #similarity-tab-content :global(.similarity-score) {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    flex-shrink: 0;
  }

  #similarity-tab-content :global(.score-value) {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text);
    font-variant-numeric: tabular-nums;
  }

  :global(.dark) #similarity-tab-content :global(.score-value) {
    color: var(--text-dark);
  }

  #similarity-tab-content :global(.score-bar) {
    width: 48px;
    height: 4px;
    background: var(--border);
    border-radius: 2px;
    margin-top: 0.25rem;
    overflow: hidden;
  }

  :global(.dark) #similarity-tab-content :global(.score-bar) {
    background: var(--border-dark);
  }

  #similarity-tab-content :global(.score-bar-fill) {
    height: 100%;
    border-radius: 2px;
    transition: width 0.3s ease;
  }

  #similarity-tab-content :global(.score-bar-fill.high) {
    background: #22c55e;
  }

  #similarity-tab-content :global(.score-bar-fill.medium) {
    background: #f59e0b;
  }

  #similarity-tab-content :global(.score-bar-fill.low) {
    background: #6b7280;
  }

  /* Avatar styles */
  #similarity-tab-content :global(.similarity-avatar) {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
    background-color: var(--border);
  }

  #similarity-tab-content :global(.similarity-avatar-fallback) {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-secondary);
    background-color: var(--border);
  }

  :global(.dark) #similarity-tab-content :global(.similarity-avatar) {
    background-color: var(--border-dark);
  }

  :global(.dark) #similarity-tab-content :global(.similarity-avatar-fallback) {
    color: var(--text-secondary-dark);
    background-color: var(--border-dark);
  }

  /* Header layout for name + indicator */
  #similarity-tab-content :global(.similarity-item-header) {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  /* Similarity indicator (++++ style like strengths tab) */
  #similarity-tab-content :global(.similarity-indicator) {
    font-weight: 700;
    font-size: 0.85rem;
    letter-spacing: -0.05em;
    color: var(--percentile-elite, #22c55e);
  }

  #similarity-tab-content :global(.similarity-indicator.indicator-4) {
    color: #16a34a;
  }

  #similarity-tab-content :global(.similarity-indicator.indicator-3) {
    color: #22c55e;
  }

  #similarity-tab-content :global(.similarity-indicator.indicator-2) {
    color: #65a30d;
  }

  #similarity-tab-content :global(.similarity-indicator.indicator-1) {
    color: #a3a3a3;
  }

  :global(.dark) #similarity-tab-content :global(.similarity-indicator.indicator-4) {
    color: #4ade80;
  }

  :global(.dark) #similarity-tab-content :global(.similarity-indicator.indicator-3) {
    color: #86efac;
  }

  :global(.dark) #similarity-tab-content :global(.similarity-indicator.indicator-2) {
    color: #a3e635;
  }

  :global(.dark) #similarity-tab-content :global(.similarity-indicator.indicator-1) {
    color: #737373;
  }

  /* Traits & differences */
  #similarity-tab-content :global(.similarity-traits) {
    font-size: 0.7rem;
    color: var(--text-secondary);
    margin-top: 0.375rem;
    line-height: 1.4;
  }

  #similarity-tab-content :global(.similarity-differences) {
    font-size: 0.7rem;
    color: var(--text-secondary);
    margin-top: 0.25rem;
    line-height: 1.4;
  }

  :global(.dark) #similarity-tab-content :global(.similarity-traits) {
    color: var(--text-secondary-dark);
  }

  :global(.dark) #similarity-tab-content :global(.similarity-differences) {
    color: var(--text-secondary-dark);
  }

  /* Trait/Difference indicators */
  #similarity-tab-content :global(.trait-indicator) {
    font-weight: 700;
    color: #22c55e;
    margin-right: 0.25rem;
    letter-spacing: -0.05em;
  }

  #similarity-tab-content :global(.diff-indicator) {
    font-weight: 700;
    color: #f97316;
    margin-right: 0.25rem;
    letter-spacing: -0.05em;
  }

  :global(.dark) #similarity-tab-content :global(.trait-indicator) {
    color: #4ade80;
  }

  :global(.dark) #similarity-tab-content :global(.diff-indicator) {
    color: #fb923c;
  }

  .empty-state {
    text-align: center;
    padding: 2rem;
    color: var(--text-secondary);
  }

  :global(.dark) .empty-state {
    color: var(--text-secondary-dark);
  }

  .hidden {
    display: none !important;
  }
</style>

<script>
  import { parseEntityParams, escapeHtml } from '../../lib/utils/dom';
  import { swrFetch, setPageData, CACHE_PRESETS } from '../../lib/utils/api-fetcher';
  import { getCurrentSeason } from '../../lib/utils/season';
  import type { SimilarityResponse, SimilarEntity } from '../../lib/types';

  class SimilarityTabManager {
    private container: HTMLElement | null;
    private apiUrl: string;
    private loaded = false;
    private prefetched = false;

    constructor() {
      // Scope query to correct parent view based on entity type from URL
      const params = parseEntityParams();
      const viewId = params.type === 'team' ? 'team-entity-view' : 'player-entity-view';
      const parentView = document.getElementById(viewId);
      this.container = parentView?.querySelector('#similarity-tab-content') as HTMLElement | null;
      this.apiUrl = this.container?.dataset.apiUrl || '';
    }

    /**
     * Build the API URL with required parameters
     */
    private buildUrl(sport: string, type: string, id: string): string {
      const season = getCurrentSeason(sport);
      return `${this.apiUrl}/similarity/${type}/${id}?sport=${sport.toUpperCase()}&season=${season}&limit=5`;
    }

    /**
     * Prefetch data without rendering (called on tab hover)
     * Populates SWR cache for faster load when tab is clicked
     */
    async prefetch(): Promise<void> {
      if (this.prefetched || this.loaded || !this.container) return;
      this.prefetched = true;

      const params = parseEntityParams();
      const { sport, type, id } = params;
      if (!sport || !type || !id) return;

      try {
        const url = this.buildUrl(sport, type, id);
        // Prefetch into SWR cache (no rendering)
        await swrFetch<SimilarityResponse>(url, CACHE_PRESETS.ml);
      } catch {
        // Silent fail on prefetch - will retry on actual load
      }
    }

    async load(): Promise<void> {
      if (this.loaded || !this.container) return;
      this.loaded = true;

      const params = parseEntityParams();
      const { sport, type, id } = params;

      if (!sport || !type || !id) {
        this.showError();
        return;
      }

      try {
        const url = this.buildUrl(sport, type, id);
        const { data } = await swrFetch<SimilarityResponse>(url, CACHE_PRESETS.ml);

        if (!data || !data.similar_entities || data.similar_entities.length === 0) {
          this.showEmpty();
          return;
        }

        setPageData('ml', { similarity: data });
        this.renderList(data.similar_entities, sport);
        this.showContent();
      } catch (err) {
        if (import.meta.env.DEV) {
          console.error('SimilarityTab error:', err);
        }
        this.showError();
      }
    }

    /**
     * Get similarity indicator based on score (like strengths tab)
     * Returns { symbol: '+', count: 1-4 } for visual display
     */
    private getSimilarityIndicator(score: number): { symbol: string; count: number } {
      const percent = score * 100;
      if (percent >= 95) return { symbol: '+', count: 4 };
      if (percent >= 85) return { symbol: '+', count: 3 };
      if (percent >= 75) return { symbol: '+', count: 2 };
      return { symbol: '+', count: 1 };
    }

    /**
     * Get difference indicator based on count
     */
    private getDifferenceIndicator(count: number): string {
      if (count >= 3) return '---';
      if (count >= 2) return '--';
      return '-';
    }

    /**
     * Get entity display name
     * FOOTBALL: Use first_name + last_name if available
     * Others: Use entity_name
     */
    private getDisplayName(entity: SimilarEntity, sport: string): string {
      if (sport.toUpperCase() === 'FOOTBALL' && entity.first_name && entity.last_name) {
        return `${entity.first_name} ${entity.last_name}`;
      }
      return entity.entity_name;
    }

    /**
     * Get initials for avatar fallback
     */
    private getInitials(name: string): string {
      const parts = name.split(' ').filter(Boolean);
      if (parts.length >= 2) {
        return (parts[0][0] + parts[parts.length - 1][0]).toUpperCase();
      }
      return name.substring(0, 2).toUpperCase();
    }

    private renderList(entities: SimilarEntity[], sport: string): void {
      const list = this.container?.querySelector('#similarity-list');
      if (!list) return;

      list.innerHTML = entities.map(entity => {
        const scorePercent = Math.round(entity.similarity_score * 100);
        const scoreClass = scorePercent >= 80 ? 'high' : scorePercent >= 60 ? 'medium' : 'low';
        const meta = [entity.position, entity.team].filter(Boolean).join(' - ');

        // Display name (FOOTBALL uses first+last name)
        const displayName = this.getDisplayName(entity, sport);

        // Similarity indicator (++++ for very similar, + for low)
        const indicator = this.getSimilarityIndicator(entity.similarity_score);
        const indicatorHtml = `<span class="similarity-indicator indicator-${indicator.count}">${indicator.symbol.repeat(indicator.count)}</span>`;

        // Avatar with photo or initials fallback
        const initials = this.getInitials(displayName);
        const avatarHtml = entity.photo_url
          ? `<img class="similarity-avatar" src="${escapeHtml(entity.photo_url)}" alt="" loading="lazy" />`
          : `<div class="similarity-avatar similarity-avatar-fallback">${escapeHtml(initials)}</div>`;

        // Traits with + indicator
        const traitsHtml = Array.isArray(entity.shared_traits) && entity.shared_traits.length > 0
          ? `<div class="similarity-traits"><span class="trait-indicator">++</span> ${entity.shared_traits.map(t => escapeHtml(t)).join(', ')}</div>`
          : '';

        // Differences with - indicator
        const diffsHtml = Array.isArray(entity.key_differences) && entity.key_differences.length > 0
          ? `<div class="similarity-differences"><span class="diff-indicator">${this.getDifferenceIndicator(entity.key_differences.length)}</span> ${entity.key_differences.map(d => escapeHtml(d)).join(', ')}</div>`
          : '';

        return `
          <li class="similarity-item"
              data-sport="${escapeHtml(sport)}"
              data-type="${escapeHtml(entity.entity_type)}"
              data-id="${entity.entity_id}">
            ${avatarHtml}
            <div class="similarity-item-info">
              <div class="similarity-item-header">
                <p class="similarity-item-name">${escapeHtml(displayName)}</p>
                ${indicatorHtml}
              </div>
              ${meta ? `<span class="similarity-item-meta">${escapeHtml(meta)}</span>` : ''}
              ${traitsHtml}
              ${diffsHtml}
            </div>
            <div class="similarity-score">
              <span class="score-value">${scorePercent}%</span>
              <div class="score-bar">
                <div class="score-bar-fill ${scoreClass}" style="width: ${scorePercent}%"></div>
              </div>
            </div>
          </li>
        `;
      }).join('');

      list.querySelectorAll('.similarity-item').forEach(item => {
        item.addEventListener('click', () => {
          const el = item as HTMLElement;
          const { sport: s, type: t, id: i } = el.dataset;
          if (s && t && i) {
            window.location.href = `/stats?sport=${s}&type=${t}&id=${i}`;
          }
        });
      });
    }

    private showContent(): void {
      this.container?.querySelector('#similarity-loading')?.classList.add('hidden');
      this.container?.querySelector('#similarity-content')?.classList.remove('hidden');
      this.container?.querySelector('#similarity-empty')?.classList.add('hidden');
      this.container?.querySelector('#similarity-error')?.classList.add('hidden');
    }

    private showEmpty(): void {
      this.container?.querySelector('#similarity-loading')?.classList.add('hidden');
      this.container?.querySelector('#similarity-content')?.classList.add('hidden');
      this.container?.querySelector('#similarity-empty')?.classList.remove('hidden');
      this.container?.querySelector('#similarity-error')?.classList.add('hidden');
    }

    private showError(): void {
      this.container?.querySelector('#similarity-loading')?.classList.add('hidden');
      this.container?.querySelector('#similarity-content')?.classList.add('hidden');
      this.container?.querySelector('#similarity-empty')?.classList.add('hidden');
      this.container?.querySelector('#similarity-error')?.classList.remove('hidden');
    }
  }

  const manager = new SimilarityTabManager();
  (window as any).similarityTab = {
    load: () => manager.load(),
    prefetch: () => manager.prefetch(),
  };
</script>
