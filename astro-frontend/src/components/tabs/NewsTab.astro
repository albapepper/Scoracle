---
/**
 * News Tab Component
 *
 * Displays news articles for an entity from RSS feeds.
 * Fetches: GET /api/v1/news/{entity_name}?sport={sport}&team={team}
 *
 * Features:
 * - News articles from Google News RSS
 * - Source and date metadata
 * - Links to original articles
 * - Lazy loading when tab is activated
 */

const apiUrl = import.meta.env.PUBLIC_API_URL || 'http://localhost:8000/api/v1';
---

<div id="news-tab-content" data-api-url={apiUrl}>
  <div id="news-loading" class="loading-skeleton">
    <div class="skeleton-item"></div>
    <div class="skeleton-item"></div>
    <div class="skeleton-item"></div>
  </div>

  <div id="news-content" class="hidden">
    <div id="news-list" class="content-list"></div>
  </div>

  <div id="news-empty" class="empty-state hidden">
    No news articles found
  </div>

  <div id="news-error" class="empty-state hidden">
    Unable to load news
  </div>
</div>

<style>
  .loading-skeleton {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .skeleton-item {
    height: 80px;
    border-radius: 4px;
    background-color: var(--border);
    animation: pulse 2s ease-in-out infinite;
  }

  :global(.dark) .skeleton-item {
    background-color: var(--border-dark);
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .content-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  #news-tab-content :global(.content-item) {
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  :global(.dark) #news-tab-content :global(.content-item) {
    border-bottom-color: var(--border-dark);
  }

  #news-tab-content :global(.content-item:last-child) {
    border-bottom: none;
    padding-bottom: 0;
  }

  #news-tab-content :global(.content-title) {
    font-weight: 600;
    color: var(--text);
    margin: 0 0 0.5rem 0;
    line-height: 1.4;
    font-size: 0.95rem;
  }

  :global(.dark) #news-tab-content :global(.content-title) {
    color: var(--text-dark);
  }

  #news-tab-content :global(.content-title a) {
    color: inherit;
    text-decoration: underline;
    text-decoration-color: var(--text-tertiary);
    text-underline-offset: 2px;
  }

  :global(.dark) #news-tab-content :global(.content-title a) {
    text-decoration-color: var(--text-tertiary-dark);
  }

  #news-tab-content :global(.content-meta) {
    font-size: 0.8rem;
    color: var(--text-secondary);
    margin-top: 0.5rem;
  }

  :global(.dark) #news-tab-content :global(.content-meta) {
    color: var(--text-secondary-dark);
  }

  .empty-state {
    text-align: center;
    padding: 2rem;
    color: var(--text-secondary);
  }

  :global(.dark) .empty-state {
    color: var(--text-secondary-dark);
  }

  .hidden {
    display: none !important;
  }
</style>

<script>
  import { escapeHtml, parseEntityParams } from '../../lib/utils/dom';
  import { formatDate } from '../../lib/utils/date';
  import { swrFetch, setPageData, waitForPageData, getPageData, CACHE_PRESETS } from '../../lib/utils/api-fetcher';
  import type { NewsArticle, NewsData } from '../../lib/types';

  interface ProfileResponse {
    entity_id: number;
    entity_type: string;
    info: {
      full_name?: string;
      first_name?: string;
      last_name?: string;
      name?: string;
      team?: { name: string };
    };
  }

  class NewsTabManager {
    private container: HTMLElement | null;
    private apiUrl: string;
    private loaded = false;

    constructor() {
      this.container = document.getElementById('news-tab-content');
      this.apiUrl = this.container?.dataset.apiUrl || '';
    }

    async load(): Promise<void> {
      if (this.loaded || !this.container) return;
      this.loaded = true;

      const params = parseEntityParams();
      const { sport, type, id } = params;

      if (!sport || !type || !id) {
        this.showEmpty();
        return;
      }

      try {
        // Get entity info from profile widget
        const entityInfo = await this.getEntityInfo(type, id, sport);
        if (!entityInfo.name) {
          this.showEmpty();
          return;
        }

        await this.fetchNews(entityInfo.name, sport, entityInfo.team);
      } catch (err) {
        if (import.meta.env.DEV) {
          console.error('NewsTab error:', err);
        }
        this.showError();
      }
    }

    private async getEntityInfo(type: string, id: string, sport: string): Promise<{ name: string | null; team: string | null }> {
      let profileData = getPageData('widget') as ProfileResponse | undefined;

      if (!profileData) {
        try {
          profileData = await waitForPageData('widget', 1000) as ProfileResponse;
        } catch {
          const url = `${this.apiUrl}/widget/profile/${type}/${id}?sport=${sport.toUpperCase()}`;
          const { data } = await swrFetch<ProfileResponse>(url, CACHE_PRESETS.widget);
          profileData = data;
          if (data) setPageData('widget', data);
        }
      }

      if (!profileData?.info) {
        return { name: null, team: null };
      }

      const info = profileData.info;
      let name: string | null = null;
      let team: string | null = null;

      if (profileData.entity_type === 'team') {
        name = info.name || info.full_name || null;
      } else {
        name = info.full_name || `${info.first_name || ''} ${info.last_name || ''}`.trim() || null;
        team = info.team?.name || null;
      }

      return { name, team };
    }

    private async fetchNews(entityName: string, sport: string, team: string | null): Promise<void> {
      const params = new URLSearchParams();
      params.set('sport', sport.toUpperCase());
      if (team) params.set('team', team);

      const url = `${this.apiUrl}/news/${encodeURIComponent(entityName)}?${params.toString()}`;
      const { data } = await swrFetch<NewsData>(url, CACHE_PRESETS.news);

      const articles = data?.articles || [];
      if (articles.length === 0) {
        this.showEmpty();
        return;
      }

      // Share news data for co-mentions tab
      setPageData('news', { articles });

      this.renderNews(articles);
      this.showContent();
    }

    private renderNews(articles: NewsArticle[]): void {
      const list = this.container?.querySelector('#news-list');
      if (!list) return;

      list.innerHTML = articles.map(article => {
        const title = escapeHtml(article.title || 'Untitled');
        const link = article.link || '#';
        const source = escapeHtml(article.source || '');
        const date = formatDate(article.pub_date);

        return `<div class="content-item">
          <h3 class="content-title">
            <a href="${link}" target="_blank" rel="noopener">${title}</a>
          </h3>
          <div class="content-meta">${source}${source && date ? ' Â· ' : ''}${date}</div>
        </div>`;
      }).join('');
    }

    private showContent(): void {
      this.container?.querySelector('#news-loading')?.classList.add('hidden');
      this.container?.querySelector('#news-content')?.classList.remove('hidden');
      this.container?.querySelector('#news-empty')?.classList.add('hidden');
      this.container?.querySelector('#news-error')?.classList.add('hidden');
    }

    private showEmpty(): void {
      this.container?.querySelector('#news-loading')?.classList.add('hidden');
      this.container?.querySelector('#news-content')?.classList.add('hidden');
      this.container?.querySelector('#news-empty')?.classList.remove('hidden');
      this.container?.querySelector('#news-error')?.classList.add('hidden');
    }

    private showError(): void {
      this.container?.querySelector('#news-loading')?.classList.add('hidden');
      this.container?.querySelector('#news-content')?.classList.add('hidden');
      this.container?.querySelector('#news-empty')?.classList.add('hidden');
      this.container?.querySelector('#news-error')?.classList.remove('hidden');
    }
  }

  const manager = new NewsTabManager();
  (window as any).newsTab = { load: () => manager.load() };
</script>
