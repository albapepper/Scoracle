---
import type { WidgetData } from '../lib/types';

interface Props {
  data: WidgetData;
}

const { data } = Astro.props;
const isPlayer = data.type === 'player';
---

<div class="card">
  <div class="flex flex-col md:flex-row gap-6">
    <!-- Image/Logo -->
    <div class="flex-shrink-0">
      {isPlayer && data.photo_url ? (
        <img 
          src={data.photo_url} 
          alt={data.display_name}
          class="w-32 h-32 rounded-lg object-cover"
        />
      ) : data.logo_url ? (
        <img 
          src={data.logo_url} 
          alt={data.display_name}
          class="w-32 h-32 rounded-lg object-contain"
        />
      ) : (
        <div class="w-32 h-32 bg-slate-200 dark:bg-slate-700 rounded-lg flex items-center justify-center">
          <span class="text-4xl font-bold text-slate-400">
            {data.display_name.charAt(0)}
          </span>
        </div>
      )}
    </div>

    <!-- Info -->
    <div class="flex-grow">
      <h1 class="text-3xl font-bold mb-2">{data.display_name}</h1>
      {data.subtitle && (
        <p class="text-lg text-slate-600 dark:text-slate-400 mb-4">
          {data.subtitle}
        </p>
      )}

      <!-- Player-specific info -->
      {isPlayer && (
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mt-4">
          {data.position && (
            <div>
              <div class="text-sm text-slate-500 dark:text-slate-400">Position</div>
              <div class="font-medium">{data.position}</div>
            </div>
          )}
          {data.age && (
            <div>
              <div class="text-sm text-slate-500 dark:text-slate-400">Age</div>
              <div class="font-medium">{data.age}</div>
            </div>
          )}
          {data.height && (
            <div>
              <div class="text-sm text-slate-500 dark:text-slate-400">Height</div>
              <div class="font-medium">{data.height}</div>
            </div>
          )}
        </div>
      )}

      <!-- Team-specific info -->
      {!isPlayer && (
        <div class="grid grid-cols-2 gap-4 mt-4">
          {data.conference && (
            <div>
              <div class="text-sm text-slate-500 dark:text-slate-400">Conference</div>
              <div class="font-medium">{data.conference}</div>
            </div>
          )}
          {data.division && (
            <div>
              <div class="text-sm text-slate-500 dark:text-slate-400">Division</div>
              <div class="font-medium">{data.division}</div>
            </div>
          )}
        </div>
      )}
    </div>
  </div>
</div>
