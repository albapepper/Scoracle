---
import Layout from '../layouts/Layout.astro';
import EntityWidgetPair from '../components/EntityWidgetPair.astro';
import SharedContentCard from '../components/SharedContentCard.astro';

// Enable SSR for dynamic co-mentions pages
export const prerender = false;
---

<Layout
  title="Co-mentions - Scoracle"
  description="Compare two entities mentioned together in sports news"
>
  <main class="co-mentions-main">
    <EntityWidgetPair />
    <SharedContentCard />
  </main>
</Layout>

<style>
  .co-mentions-main {
    min-height: calc(100vh - 3.5rem);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding-top: 2rem;
    padding-left: 1rem;
    padding-right: 1rem;
    padding-bottom: 2rem;
    background-color: var(--bg);
    gap: 2rem;
  }

  :global(.dark) .co-mentions-main {
    background-color: var(--bg-dark);
  }
</style>
