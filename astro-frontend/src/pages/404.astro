---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - Scoracle">
  <div class="container-custom">
    <div class="text-center py-20">
      <h1 class="text-6xl font-bold text-slate-800 dark:text-slate-200 mb-4">404</h1>
      <h2 class="text-3xl font-semibold mb-4">Page Not Found</h2>
      <p class="text-xl text-slate-600 dark:text-slate-400 mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <a href="/" class="btn btn-primary inline-block">
        Go Home
      </a>
    </div>
  </div>
</Layout>
