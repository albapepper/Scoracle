---
import Layout from '../layouts/Layout.astro';
import CrystalBallSelector from '../components/CrystalBallSelector.astro';
---

<Layout title="Scoracle">
  <main class="home-main">
    <div class="central-card">
      <CrystalBallSelector />
    </div>
  </main>
</Layout>

<style scoped>
  .home-main {
    min-height: calc(100vh - 3.5rem);
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: calc((100vh - 3.5rem) * 0.15);
    padding-left: 2rem;
    padding-right: 2rem;
    padding-bottom: 2rem;
    background-color: var(--bg);
  }

  :global(.dark) .home-main {
    background-color: var(--bg-dark);
  }

  .central-card {
    width: 100%;
    max-width: 900px;
    padding: 4.5rem;
    text-align: center;
  }

  @media (max-width: 768px) {
    .home-main {
      padding: 1rem;
      padding-top: calc((100vh - 3.5rem) * 0.1);
    }

    .central-card {
      padding: 1.5rem 1rem;
    }
  }
</style>
