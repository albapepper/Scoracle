---
import Layout from '../layouts/Layout.astro';
import ProfileWidget from '../components/ProfileWidget.astro';
import IntelWidget from '../components/IntelWidget.astro';

// Enable SSR for dynamic mentions pages (faster initial load)
export const prerender = false;
---

<Layout
  title="Mentions - Scoracle"
  description="View recent mentions and news about sports players and teams"
>
  <main class="mentions-main">
    <ProfileWidget page="mentions" />
    <IntelWidget />
  </main>
</Layout>

<style>
  .mentions-main {
    min-height: calc(100vh - 3.5rem);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding-top: 2rem;
    padding-left: 1rem;
    padding-right: 1rem;
    padding-bottom: 2rem;
    background-color: var(--bg);
    gap: 2rem;
  }

  :global(.dark) .mentions-main {
    background-color: var(--bg-dark);
  }
</style>
